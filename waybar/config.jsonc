{
  "layer": "top",
  "position": "top",
  "width": 1750,
  "margin-top": 2,
  "gtk-layer-shell": true,
  // "reload_style_on_change": true,
  "fixed-center": true,
  // "mode": "hide",
  // "start-hidden": true,
  // "height": 30,
  // "spacing": 2,
  "modules-left": ["hyprland/workspaces", "custom/player"],
  "modules-center": ["clock"],
  "modules-right": [
    "tray",
